<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserratbold"
            android:text="Moisture"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <ImageButton
            android:id="@+id/button_logout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape2"
            android:backgroundTint="@color/third"
            android:contentDescription="logout"
            android:src="@drawable/ic_baseline_logout_24" />

        <androidx.cardview.widget.CardView
            android:id="@+id/Cardview"
            android:layout_below="@id/main_title"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="350dp">
            <WebView
                android:id="@+id/Webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/RT_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Cardview"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box"
            android:backgroundTint="@color/secondary"
            android:fontFamily="@font/montserratbold"
            android:paddingVertical="10dp"
            android:text="Realtime Data"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />
        <LinearLayout
            android:id="@+id/Linear"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/RT_text"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/box"
                android:backgroundTint="@color/secondary"
                android:layout_marginRight="10dp"
                android:layout_weight="50">

                <TextView
                    android:id="@+id/title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Plant 1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/value_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title_1"
                    android:fontFamily="@font/montserratbold"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="36sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/box"
                android:backgroundTint="@color/secondary">

                <TextView
                    android:id="@+id/title_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserratbold"
                    android:text="Plant 2"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/value_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title_2"
                    android:fontFamily="@font/montserratbold"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="36sp" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Linear"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box"
            android:backgroundTint="@color/secondary"
            android:layout_marginBottom="20dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/title_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratbold"
                android:text="Water Pump"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/title_3"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/third"
                android:fontFamily="@font/montserratbold"
                android:text="Turn On"
                android:textAllCaps="false"
                android:textColor="@color/black" />

        </RelativeLayout>
    </RelativeLayout>


</ScrollView>